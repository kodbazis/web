<div class="mt-3 mb-3 content-body first-section">
	<div class="col-sm-12">
		<div class="card p-3 bg-transparent-70">
			{% for row in episodes %}
				<div class="row">
					{% for episode in row %}
						<div class="col-sm-4 mb-2 pl-2 pr-2">
							<a href="{{course.slug}}/{{episode.slug}}">
								<div class="card hover11" class="w-100">
									<figure>
										<img class="card-img-top" src="/public/files/md-{{ episode.imgUrl }}" alt=""/>
									</figure>
								</div>
							</a>

						</div>
					{% endfor %}
				</div>
			{% endfor %}
		</div>
	</div>
</div>
