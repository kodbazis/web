<div class="mt-3 mb-3 content-body first-section">
	<div class="col-sm-12">
		<div class="card p-3">
			<h1>
				{{course.title}}
			</h1>
			<hr/>

			{{course.description | raw}}
			{% for row in episodes %}
				<div class="row pb-3">
					{% for episode in row %}
						<div class="col-sm-4">
							<a href="{{course.slug}}-kurzus/{{episode.slug}}">
								<div class="card" class="w-100">
									<img class="card-img-top" src="/public/files/md-{{ episode.imgUrl }}" alt=""/>
									<div class="card-body">
										<h5 class="card-title">{{ episode.title }}</h5>
									</div>
								</div>
							</a>
						</div>
					{% endfor %}
				</div>
			{% endfor %}
		</div>
	</div>
</div>
