<div class="mt-3 mb-3 content-body">
	<div style="margin-bottom:70px"></div>
	<div class="card">
		{% if isLoggedIn %}
			<div class="card-body w-100 p-0" id="hero-spot2">
				<div class="card-title">
					<h2 class="mb-4 mt-5 text-success">
						Bejelentkezve
						<i class="fa fa-check-circle"></i>
					</h2>
				</div>
			</div>

			{% include 'home-links.twig' %}
			<div class="row p-0 m-0 w-100 border-right border-muted">
				<div class="col-sm-4 m-auto">
					<h1 class="mt-5 mb-5" style="font-size: 2.5em">
						<a href="/php-az-alapoktol">PHP az alapoktól</a>
					</h1>
				</div>
				<div class="col-sm-4 m-auto" style="font-size: 2.5em"></div>
				<div class="col-sm-4 m-auto">
					<h1 class="mt-5 mb-5" style="font-size: 2.5em">
						<a href="/react-kurzus">React egyszerűen elmagyarázva</a>
					</h1>
				</div>
			</div>

		{% else %}
			<div class="row m-0">
				<div class="col-md-8 m-auto text-center">
					<div class="card-body w-100 p-0" id="hero-spot2">
						<h1>
							Lépj be a Kódbázisba
						</h1>
					</div>
				</div>
				<div class="col-md-4">
					<div class="p-3">
						{% include 'subscriber-login-form.twig' with {'loginError': loginError, 'email': email, registrationPath: '/feliratkozas', 'isPasswordModificationSuccess': isPasswordModificationSuccess}  %}
					</div>
				</div>
			</div>
		</div>
	{% endif %}

</div></div>
