<form id="form" class="mb-3 bg-light p-3" method="post" action="/api/subscriber-login">
	<h2 class="mb-2">Bejelentkezés</h2>
	<div class="form-group row pb-3">
		<label class="col-sm-2 col-form-label">Email:</label>
		<div class="col-md-10">
			<input type="email" name="email" class="form-control" required/>
		</div>
	</div>
	<div class="form-group row pb-3">
		<label class="col-sm-2 col-form-label">Jelszó:</label>
		<div class="col-md-10">
			<input type="password" name="password" class="form-control" required/>
		</div>
	</div>
	<br/>
	<button type="submit" class="btn btn-success btn-lg">Bejelentkezés</button>
</form>
