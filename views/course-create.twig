<div class="row">
  <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
    <div class="page-header">
      <h2 class="pageheader-title">Új kurzus</h2>
    </div>
  </div>
</div>

<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
  <div class="card">
    <div class="card-body">
      <form action="/admin/kurzusok/create" method="post" enctype="multipart/form-data">
        <input type="hidden" name="csrfToken" value="{{ csrfToken }}">
        <div class="form-group">
          <label class="w-100">
            Cím
            <input type="text" class="form-control" name="title">
          </label>
        </div>
        <div class="form-group">
          <label class="w-100">
            Számlán szereplő cím
            <input type="text" class="form-control" name="invoiceTitle">
          </label>
        </div>
        <div class="form-group">
          <label class="w-100">
            Ár
            <input type="number" class="form-control" name="price">
          </label>
        </div>
        <div class="form-group">
          <label class="w-100">
            Leértékelés
            <input type="number" class="form-control" name="discount">
          </label>
        </div>
        <label class="w-100">
          Tartalom
          <textarea class="cke" name="content"></textarea>
        </label>
        <label class="w-100">
          Leírás
          <textarea style="width: 100%; height: 200px;" name="description"></textarea>
        </label>
        <label class="w-100">
          Kép
          <input type="file" name="mainImage">
        </label>
        <div class="form-group">
          <label class="w-100">
            Aktív
            <input type="checkbox" class="form-control" name="isActive" value="1" checked>
          </label>
        </div>
        <button class="btn btn-primary" type="submit">Elküldés</button>
      </form>
    </div>
  </div>
</div>