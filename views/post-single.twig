<div class="mt-3 mb-3 content-body">
  <div class="col-sm-12">
    <div class="card bg-transparent-70">
      <div class="card-body">
        <div class="card-title">
          <h1 class="mb-4 mt-5">{{ post.title }}</h1>
        </div>
        <hr>
        {{ postContent | raw }}
      </div>
      <div id="fb-root"></div>
      <script 
        async 
        defer 
        crossorigin="anonymous" 
        src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v8.0&appId=705894336804251&autoLogAppEvents=1" 
        nonce="GLaxzOjV"
      ></script>
      <div 
        class="fb-like" 
        data-href="{{url}}" 
        data-width="" 
        data-layout="standard" 
        data-action="like" 
        data-size="small" 
        data-share="true"
      ></div>    
    </div>
  </div>
</div>




