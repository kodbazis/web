<section class="first-section wrapper">
	<div class="mt-5 mb-3">
		{% for row in posts %}
			<div class="row">
				{% for post in row %}
					<div class="col-sm-4">
						<a href="/cikkek/{{ post.slug }}">
							<div class="card" class="w-100">
								<img class="card-img-top" src="/public/files/md-{{ post.imgUrl }}" alt=""/>
								<div class="card-body">
									<h5 class="card-title">{{ post.title }}</h5>
								</div>
							</div>
						</a>
					</div>
				{% endfor %}
			</div>
		{% endfor %}
	</div>
</section>
