<div class="mt-3 mb-3 content-body">
	<div class="col-sm-12">
		<div class="card">
			<div class="card-body w-100 p-0" id="hero-spot2">
				{% if isLoggedIn %}
					<div class="card-title">
						<h1 class="mb-4 mt-5 text-success">
							Bejelentkezett felhasználó:
							{{subscriberLabel}}
						</h1>

						<div class="row">
							<div class="col-sm-3">
								<h2 class="mt-5 mb-5">
									<a href="/cikkek">Cikkek</a>
								</h2>
							</div>
							<div class="col-sm-3">
								<h2 class="mt-5 mb-5">
									<a href="/react-kurzus">React Kurzus</a>
								</h2>
							</div>
							<div class="col-sm-3">
								<h2 class="mt-5 mb-5">
									<a href="/trening">Tréning</a>
								</h2>
							</div>
							<div class="col-sm-3">
								<h2 class="mt-5 mb-5">
									<a href="/elerhetoseg">Elérhetőség</a>
								</h2>
							</div>
						</div>

					</div>
				{% else %}
					<div style="margin-bottom:60px"></div>

					<div class="row">
						<div class="col-sm-6">
							<h1 class="m-auto text-center pt-5 pb-5">
								Légy tagja a Kódbázis közösségének
							</h1>
						</div>
						<div class="col-sm-6">
							<div class="p-3">
								{% if registrationEmailSent %}
									<div class="alert alert-success p-1 pr-2 pl-2">
										<p style="font-size:24px">
											A megadott email címre kiküldtünk egy visszaigazoló üzenetet. Kérjük kattints az üzenetben lévő megerősítés gombra!
										</p>
									</div>
								{% endif %}
								{% if registrationSuccessful %}
									<div class="alert alert-success p-1 pr-2 pl-2">
										<p style="font-size:24px">
											Regisztráció sikeres!
										</p>
									</div>
								{% endif %}
								{% include 'subscriber-registration-form.twig' with {'registrationSuccessful': registrationSuccessful, 'isError': isError, loginPath: '/bejelentkezes'}  %}
							</div>
						</div>
					</div>
				{% endif %}
			</div>
		</div>
	</div>
</div>
