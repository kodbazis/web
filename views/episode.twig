<div class="mt-3 mb-3 content-body first-section">
  <div class="col-sm-12">
    <div class="card p-3">
    <nav>
        <ul class="pagination justify-content-center">
            <li class="page-item disabled">
            <a class="page-link" href="#" tabindex="-1">Előző</a>
            </li>
            {% for episode in episodes %}    
                <li class="page-item {{episode.slug == currentEpisode.slug ? 'active' : ''}}">
                    <a class="page-link" href="/kurzus/{{course.slug}}/{{episode.slug}}">
                        {{episode.title}}
                    </a>
                </li>
            {% endfor %}
            <a class="page-link" href="#">Következő</a>
            </li>
        </ul>
    </nav>
      <h1>
        {{course.title}}: {{currentEpisode.title}}
      </h1>
       
      <hr/>


        <video controls  controlsList="nodownload noremoteplayback" style="width: 100%;" src="/watch/{{course.slug}}/{{currentEpisode.videoFileName}}"></video>
    </div>
  </div>
</div>
