<div class="row">
  <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
    <div class="page-header">
      <h2 class="pageheader-title">Blogbejegyzés szerkesztése</h2>
    </div>
  </div>
</div>

<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
  <div class="card">
    <div class="card-body">
      <form
          action="/admin/cikkek/update/{{ post.id }}"
          method="post"
          enctype="multipart/form-data"
          id="form">
        <input type="hidden" name="csrfToken" value="{{ csrfToken }}">
        <div class="form-group">
          <label class="w-100">
            Cím
            <input type="text" class="form-control" name="title" value="{{ post.title }}">
          </label>
        </div>
        <div class="form-group">
          <label class="w-100">
            Keresőbarát név
            <input type="text" class="form-control mr-3 w-100" name="slug" value="{{ post.slug }}">
          </label>
        </div>
        <label class="w-100">
          Tartalom
          <textarea class="cke" name="content">{{ post.content }}</textarea>
        </label>
        <label class="w-100">
          Leírás
          <textarea style="width: 100%; height: 200px;" name="description">{{ post.description }}</textarea>
        </label>
        <label class="w-100">
          {% if post.imgUrl %}
            <img src="/src/public/files/{{ post.imgUrl }}" class="img-fluid">
          {% endif %}
          Kép
          <input type="file" name="mainImage">
        </label>
        <label class="w-100">
          Aktív
          <input
              type="checkbox"
              class="form-control"
              name="isActive"
              {{ post.isActive ? 'checked' : '' }}
              value="1"
          >
        </label>
        <div class="form-group">
          <label class="w-100">
            Kép alt tag
            <input type="text" class="form-control" name="imgAltTag" value="{{ post.imgAltTag }}">
          </label>
        </div>
        <button class="btn btn-primary" type="submit">Elküldés</button>
      </form>

    </div>
  </div>
</div>