<div class="mt-3 mb-3 content-body">
	<div class="col-sm-12">
		<div class="card bg-transparent-70">
			<div class="card-body">
				<div class="card-title">
					<h1 class="mb-4 mt-5">{{ episode.title }}</h1>
				</div>
				<hr>
				{{ episodeContent | raw }}
				<hr class="mb-3">
			</div>

			<div class="bg-light">
				<h2 class="pt-3 pb-2 text-center">
					További epizódok:
				</h2>

				<a href="/{{course.slug}}">
					<p class="p-2 text-center">
						Összes epizód
					</p>
				</a>

				<div class="app mb-3 bg-light" data-position="{{episode.position}}">
					<ul class="hs full">
						{% for ep in allEpisodesInCourse %}
							<a class="hover11" href="/{{course.slug}}/{{ep.slug}}">
								<li class="overlay-container item {{ep.id == episode.id ? 'selected-episode' : ''}} {{ep.isPreview ? 'preview' : 'lock'}}">
									<figure {{ep.isPreview or isVerified? '' : 'style="opacity: 0.4"'}}>

										{% if ep.imgUrl %}
											<img loading="lazy" class="img-thumbnail p-0" src="/public/files/sm-{{ep.imgUrl}}"/>
											{% if not isVerified %}
												<div class="after"></div>
											{% endif %}
										{% else %}
											<p class="text-center">{{ ep.title }}</p>
										{% endif %}
									</figure>
								</li>
							</a>
						{% endfor %}
					</ul>
				</div>

				<div class="row ml-2 mr-2 mb-2">
					<div class="col-sm-6 mb-3">
						{% if previousEpisode %}
							<a href="/{{course.slug}}/{{previousEpisode.slug}}">
								<span class="lead mr-1 {{ not isVerified and not previousEpisode.isPreview ? 'text-muted': '' }}" style="font-weight: 400">
									❮
									{{previousEpisode.title}}
								</span>

							</a>
						{% endif %}
					</div>
					<div class="col-sm-6">
						{% if nextEpisode %}
							<a class="float-right" href="/{{course.slug}}/{{nextEpisode.slug}}">
								<span class="lead ml-1 {{ not isVerified and not nextEpisode.isPreview ? 'text-muted': '' }}" style="font-weight: 400">
									{{nextEpisode.title}}
									❯
								</span>
							</a>
						{% else %}
							{# <h2 class="text-center">
								<span class="text-dark">
									Sikeresen elvégezted a kurzust.
								</span>
								<span class="text-success">
									Gratulálok!
								</span>
							</h2> #}
						{% endif %}
					</div>
				</div>

				<div id="fb-root"></div>
			</div>
			<script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v8.0&appId=705894336804251&autoLogAppEvents=1" nonce="GLaxzOjV"></script>
			<div class="fb-like" data-href="{{url}}" data-width="" data-layout="standard" data-action="like" data-size="small" data-share="true"></div>
		</div>
	</div>
</div>
<script>
	const pos = parseInt(document.querySelector('.app').dataset.position) - 2;
const epWidth = document.querySelector('.item').offsetWidth + 10;
document.querySelector('.hs').scrollLeft = epWidth * pos;
</script>
