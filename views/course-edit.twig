<div class="row">
  <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
    <div class="page-header">
      <h2 class="pageheader-title">Kurzus szerkesztese</h2>
    </div>
  </div>
</div>

<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
  <div class="card">
    <div class="card-body">
      <form action="/admin/kurzusok/update/{{ course.id }}" method="post" enctype="multipart/form-data">
        <input type="hidden" name="csrfToken" value="{{ csrfToken }}">
        <div class="form-group">
          <label class="w-100">
            Cím
            <input type="text" class="form-control" name="title" value="{{ course.title }}">
          </label>
        </div>
        <div class="form-group">
          <label class="w-100">
            Keresőbarát név
            <input type="text" class="form-control mr-3 w-100" name="slug" value="{{ course.slug }}">
          </label>
        </div>
        <label class="w-100">
          Leírás
          <textarea style="width: 100%; height: 200px;" name="description" value="{{ course.description }}"></textarea>
        </label>
        <label class="w-100">
          Kép
          <input type="file" name="mainImage">
        </label>
        <div class="form-group">
          <label class="w-100">
            Aktív
            <input type="checkbox" class="form-control" name="isActive" value="1"  {{ course.isActive ? 'checked' : '' }}>
          </label>
        </div>
        <button class="btn btn-primary" type="submit">Elküldés</button>
      </form>
    </div>
  </div>
</div>