<div class="mt-3 mb-3 content-body">
	<div style="margin-bottom: 90px"></div>

	<h1 style="font-weight: 300 !important">
		{{course.title}}
	</h1>
	<hr/>

	<div class="row m-auto">
		<div class="col-md-8 mb-3 p-2">
			{% if registrationSuccessful %}
				<div class="alert text-center alert-success p-1 pr-2 pl-2">
					<p style="font-size:15px">
						<b>Regisztráció sikeres!</b>
					</p>
				</div>
			{% endif %}
			{% if loginSuccess %}
				<div class="alert text-center alert-success p-1 pr-2 pl-2">
					<p style="font-size:15px">
						<b>Bejelentkezés sikeres!</b>
					</p>
				</div>
			{% endif %}
			<p class='text-center' class="w-100" style="background-color: #151515">
				<div id="video-panel" class="kodseged" data-videoid="{{course.videoId}}" data-isautoplay="{{isAutoplay}}" data-type="vimeo"></div>
			</p>
			<p class="lead p-2 text-center">
				<b>{{course.description}}</b>
			</p>
			{% include 'react-quotes.twig'  %}
		</div>
		<div class="col-md-4">

			<div class="row">
				<div class="col-md-12 border-bottom">
					{% if course.price == discountedPrice %}
						<h1 class="pb-2" style="font-size: 3em">
							<b>{{course.price | number_format(0, '', ' ')}}
								ft</b>
						</h1>
					{% else %}
						<div class="row p-2">


							<div class="col-md-8">
								<span class="first">{{discountedPrice | number_format(0, '', ' ') }}
									Ft</span>
								<span class="second strikethrough">{{course.price | number_format(0, '', ' ')}}
									Ft</span>
									<img class="img-fluid" width="100px" src="/public/images/simplepay_logo.png" title="SimplePay - Online bankkártyás fizetés" alt="SimplePay vásárlói tájékoztató">
							</div>
							<div class="col-md-4">

								<div class="float-right text-center">
									<div class="third text-center">
										-{{course.discount}}%
									</div>
									<span style="font-size: 10px">Limitált ideig!</span>
									
								</div>
							</div>


						</div>

					{% endif %}
				</div>
			</div>

			<div class="row p-2 mb-2 border-bottom">
				{{paywallForm | raw}}
			</div>

			<div class="col-md-12 m-auto pb-2">
				<h1 class="text-center mb-2">Mit kapsz?</h1>
				<ul class="lead checkmark-list">
					<li>
						<i class="fa fa-check color-blue mr-2"></i>
						<b>{{numberOfEpisodes}}
							oktatóvideót</b>
					</li>
					<li>
						<i class="fa fa-check color-blue mr-2"></i>
						<b>7 kipróbálható React appot</b>
					</li>
					<li>
						<i class="fa fa-check color-blue mr-2"></i>
						<b>6 interaktív prezentációt</b>
					</li>
					<li>
						<i class="fa fa-check color-blue mr-2"></i>
						<b>Back-end API-t a gyakorláshoz</b>
					</li>
					<li>
						<i class="fa fa-check color-blue mr-2"></i>
						<b>Élő kódmegjelenítést</b>
					</li>
				</ul>
			</div>
			<p class="lead p-2 red">
				<b>
					Ha nem vagy elégedett a tanfolyammal, akkor visszaküldjük a teljes árát!
				</b>
			</p>

		</div>
	</div>
	{{contentWithEmbeddables | raw}}
	{{episodeList | raw}}
	<h1 class="red main-font">
		<b>Vedd meg és lendítsd előre a karriered!
			<i class="fa fa-thumbs-up fa-lg"></i>
		</b>
	</h1>
</div>
